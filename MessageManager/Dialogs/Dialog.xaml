<Page x:Class="MessageManager.Dialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MessageManager"
      mc:Ignorable="d" 
      d:DesignHeight="140" d:DesignWidth="400"
      Title="dialog" UseLayoutRounding="False">
    <Page.Effect>
        <DropShadowEffect BlurRadius="8" Opacity="0.5"/>
    </Page.Effect>

    <Grid>
        <Rectangle Fill="White" Stroke="Black"/>
        <Grid x:Name="MessageContent">
            <TextBlock x:Name="Title" TextWrapping="NoWrap" TextAlignment="Center" Text="Title" VerticalAlignment="Top" Margin="10,4,10,0"/>
            <TextBlock x:Name="Message" Margin="80,30,10,50" TextWrapping="Wrap" Text="Message" />
            <Image x:Name="MessageImage" HorizontalAlignment="Left" Height="60" Margin="10,30,0,0" VerticalAlignment="Top" Width="60"/>
            <StackPanel x:Name="ButtonPanel" HorizontalAlignment="Right"  Height="24" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="310" Orientation="Horizontal" FlowDirection ="RightToLeft"/>
        </Grid>
    </Grid>
</Page>
